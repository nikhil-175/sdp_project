<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>officer registration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="../css/ostyle.css">
</head>
<body>
     <section class="container-fluid">
    <!-- row and justify-content-center class is used to place the form in center -->
    <section class="row justify-content-center">
      <section class="col-12 col-sm-6 col-md-4">
        <form class="form-container" action="/oregister" method="post">
          <div class="form-group">
            <h4 class="text-center font-weight-bold">Officer registration form</h4>
            {{#if mes}}
            <div class="alert {{messageClass}}" role="alert">
              {{mes}}
            </div>
            {{/if}}
            <label for="InputEmail1"><i class="fa fa-user fa-1x" style="margin-right: 8px;"></i>Username</label>
            <input type="text" class="form-control" id="InputEmail1" aria-describeby="emailHelp"
              placeholder="Enter username" name="username" required>
            <label for="InputEmail1"><i class="fa fa-envelope fa-1x" style="margin-right: 8px;"></i>Email
              Address</label>
            <input type="email" class="form-control" id="InputEmail1" aria-describeby="emailHelp"
              placeholder="Enter email" name="email" required>
              <label for="InputEmail1"><i class="fa fa-lock fa-1x" style="margin-right: 8px;"></i>password</label>
            <input type="password" class="form-control" id="InputEmail1" aria-describeby="emailHelp"
              placeholder="Enter passwpord" name="password" required>
              <label for="InputEmail1"><i class="fa fa-lock fa-1x" style="margin-right: 8px;"></i>confirm password</label>
            <input type="password" class="form-control" id="InputEmail1" aria-describeby="emailHelp"
              placeholder="confirm passwpord" name="cpassword" required>
              <label for="InputEmail1">Area</label>
            <input type="text" class="form-control" id="InputEmail1" aria-describeby="emailHelp"
              placeholder="Enter area" name="area" required>
              <label for="InputEmail1">Department</label>
            <input type="text" class="form-control" id="InputEmail1" aria-describeby="emailHelp"
              placeholder="Enter department" name="department" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Register</button>
        </form>
      </section>
    </section>
  </section>
</body>
</html>