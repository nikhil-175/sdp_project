  <body>
    <section>
        <div class="head">
          <ul>{{myprofiles.email}}</ul>
          <div class="pho">
          <a href="https://www.instagram.com"><img src="img/insta.jpeg" alt="avtar"></a>
          <a href="https://www.facebook.com"><img src="img/face.jpeg" alt="avtar"></a>
          <a href="https://www.twitter.com"><img src="img/twi.jpeg" alt="avtar"></a>
          </div>
        </div>
        <div class="imag">
            <img src="img/image2.jpeg" alt="">
            <ul>{{myprofiles.username}}</ul>
        </div>
        <div class="about">
           <div class="col-md-8 mt-1">
                    <div class="card mb-3 contect">
                        <h1 class="m-3 pt-3">About</h1>
                        <form>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Username</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <ul>{{myprofiles.username}}</ul>
                                    {{!-- <input type="hidden" class="input" name="username" value="{{myprofiles.username}}"/> --}}
                                </div>
                                
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Email</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                      <div class="col-md-9 text-secondary">
                                          <ul>{{myprofiles.email}}</ul>
                                    {{!-- <input type="email" class="input" name="email" value="{{myprofiles.email}}"/> --}}
                                </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>First Name</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                     <ul>{{complaines.firstname}}</ul>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Last Name</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                     <ul>{{complaines.lastname}}</ul>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Address</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                     <ul>{{complaines.address}}</ul>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Area</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                     <ul>{{complaines.area}}</ul>
                                </div>
                            </div>

                        </div>    
                        </form>
                    </div>
                </div>
        </div>
    </section>

