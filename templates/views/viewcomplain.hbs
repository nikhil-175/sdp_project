</head>
<body>

  <div class="container-fluid">
    <h2 style="margin-top: 40px;">All complains</h2>
    <table class="table table-striped" style="margin-top: 30px;">
      <thead>
        <tr>
          <th>Complain id</th>
          <th>First name</th>
          <th>Last name</th>
          <th>gender</th>
          <th>dateandtime</th>
          <th>email</th>
          <th>Number</th>
          <th>Address</th>
          <th>Area</th>
          <th>department</th>
          <th>description</th>
          <th>Update Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each complain}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.firstname}}</td>
          <td>{{this.lastname}}</td>
          <td>{{this.gender}}</td>
          <td>{{this.dateandtime}}</td>
          <td>{{this.email}}</td>
          <td>{{this.number}}</td>
          <td>{{this.address}}</td>
          <td>{{this.area}}</td>
          <td>{{this.department}}</td>
          <td>{{this.description}}</td>
          <td>
            <!-- Example single danger button -->
            <div class="btn-group">
              <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                aria-expanded="false">
               {{this.status}}
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/pending/{{this._id}}">Pending</a>
                <a class="dropdown-item" href="/onprogress/{{this._id}}">On progress</a>
                <a class="dropdown-item" href="/completed/{{this._id}}">Completed</a>
              </div>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</body>

</html>